<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.system.mapper.CourseMapper">

    <resultMap type="com.cloud.system.domain.Course" id="Course"></resultMap>


    <insert id="save" parameterType="Course">
        insert into t_course (course_id,course_name,course_type,zone_id,server_ip)
        values (#{courseId},#{courseName},#{courseType},#{zoneId},#{serverIp})
    </insert>

    <update id="update" parameterType="Course">
        update t_course set course_name = #{courseName},server_ip = #{serverIp} where course_id = #{courseId}
    </update>
</mapper>